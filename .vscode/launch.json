    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Запустить Сервер",
            "type": "debugpy",
            "request": "launch",
            "module": "src.server.main",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Запустить Клиент 1",
            "type": "debugpy",
            "request": "launch",
            "module": "src.client.main",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Запустить Клиент 2",
            "type": "debugpy",
            "request": "launch",
            "module": "src.client.main",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        }
        ,
        {
            "name": "Python: Запустить тесты",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "src"
            ],
            "console": "integratedTerminal"
        }
        ,
         {
            "name": "Build Executable",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/client/main.py", // Не используется, но поле обязательно
            "console": "integratedTerminal",
            "preLaunchTask": "Build Executable"
        }
    ],
    "compounds": [
        {
            "name": "Сервер и 2 Клиента",
            "configurations": [
                "Python: Запустить Сервер",
                "Python: Запустить Клиент 1",
                "Python: Запустить Клиент 2"
            ]
        }
    ]
}